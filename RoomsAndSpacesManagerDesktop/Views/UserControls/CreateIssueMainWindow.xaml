                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Холодоснабжение" Binding="{Binding Discription_HS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="100">
                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="{Binding Discription_HS_color}"/>
