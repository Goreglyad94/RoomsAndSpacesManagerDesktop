<Window x:Class="RoomsAndSpacesManagerDesktop.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoomsAndSpacesManagerDesktop.Views.Windows"
        xmlns:vm="clr-namespace:RoomsAndSpacesManagerDesktop.ViewModels"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <TabControl>
        <TabItem Header="Создать новый проект и модель">
            <Grid>
                <DockPanel>
                    <TextBox Text="{Binding NewProjectName}" Width="100" Height="50" DockPanel.Dock="Top"/>
                    <TextBox Text="{Binding NewBildingName}" Width="100" Height="50" DockPanel.Dock="Top"/>
                    <Button Width="100" Height="50" DockPanel.Dock="Top" Command="{Binding AddNewProjectAndBildingCommand}" />
                </DockPanel>
            </Grid>
        </TabItem>
        <TabItem Header="Сводная таблица">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition  Width="250"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="Категория: " DockPanel.Dock="Left"  VerticalAlignment="Center"/>
                    <ComboBox DockPanel.Dock="Left" Height="25" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </DockPanel>

                <DockPanel Grid.Row="0" Grid.Column="1">
                    <TextBlock Text="Подкатегория: " DockPanel.Dock="Left"  VerticalAlignment="Center"/>
                    <ComboBox DockPanel.Dock="Left" Width="150" HorizontalAlignment="Left" Height="25" VerticalAlignment="Center"/>
                </DockPanel>


                <DataGrid Grid.Row="1" Grid.ColumnSpan="3" ItemsSource="{Binding rooms}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="1*"/>
                        <DataGridTextColumn Header="Наименование помещения" Width="1*" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Краткое наименование" Width="1*" Binding="{Binding ShortName}"/>
                        <DataGridTextColumn Header="Номер помещения" Width="1*" Binding="{Binding RoomNumber}"/>
                        <DataGridTextColumn Header="Площадь" Width="1*" Binding="{Binding Area}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
