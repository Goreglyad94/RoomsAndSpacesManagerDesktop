<UserControl x:Class="RoomsAndSpacesManagerDesktop.CreateIssuesForm.Views.MainUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoomsAndSpacesManagerDesktop.CreateIssuesForm.Views"
             xmlns:head="clr-namespace:RoomsAndSpacesManagerDesktop.CreateIssuesForm.Views.Head"
              xmlns:body="clr-namespace:RoomsAndSpacesManagerDesktop.CreateIssuesForm.Views.Body"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <head:SelectionProjectsUserControl x:Name="HeadProjects"  Grid.Row="0"/>
        <TabControl Grid.Row="1">
            <TabItem Header="Формирование задания">
                <body:CreateIssueUserControl x:Name="BodyCreateUssue" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
